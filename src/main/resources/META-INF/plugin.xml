<idea-plugin>
    <id>org.jetbrains</id>
    <name>Notes-Plugin</name>
    <vendor email="null" url="github">Notes Plugin Project</vendor>

    <description><![CDATA[
    A plugin for recording and managing notes about files
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!--model-->
        <!--Todo: use persistent state component impl-->
        <applicationService serviceInterface="notes.service.model.file.FileNoteStorageService"
                            serviceImplementation="notes.service.model.file.impl.FileNoteStorageByPropertiesComponent"/>
         <moduleService serviceInterface="notes.service.model.module.ModuleNoteStorageService"
                            serviceImplementation="notes.service.model.module.impl.ModuleNoteStorageByPropertiesComponent"/>
         <projectService serviceInterface="notes.service.model.project.ProjectNoteStorageService"
                            serviceImplementation="notes.service.model.project.impl.ProjectNoteStorageByPropertiesComponent"/>

        <!--controller-->
        <applicationService serviceInterface="notes.service.controller.NoteService" serviceImplementation="notes.service.controller.impl.NoteServiceImpl"/>

        <!--view-->
        <applicationService serviceInterface="notes.service.view.NoteAnnotationService"
                            serviceImplementation="notes.service.view.impl.NoteAnnotationServiceImpl"/>
        <applicationService serviceInterface="notes.service.view.NotePopupService"
                            serviceImplementation="notes.service.view.impl.NotePopupServiceImpl"/>
        <applicationService serviceInterface="notes.service.view.NoteListService"
                            serviceImplementation="notes.service.view.impl.NoteListServiceImpl"/>

    </extensions>

    <actions>
        <action id="notes-plugin.notes.action.ShowNoteAnnotations" class="notes.action.ShowNoteAnnotations" text="Show notes.service.model.Note Annotations"
                description="show note annotations">
            <add-to-group group-id="EditorGutterPopupMenu" anchor="first"/>
        </action>
        <action id="notes-plugin.notes.showNotesList" class="notes.action.ShowNotesList" text="show notes list"
                description="show the notes list">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>