<idea-plugin>
    <id>org.jetbrains</id>
    <name>Notes-Plugin</name>
    <vendor email="null" url="github">Notes Plugin Project</vendor>

    <description><![CDATA[
    A plugin for recording and managing notes about files
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="notes.NoteService" serviceImplementation="notes.impl.NoteServiceImpl"/>
        <projectService serviceInterface="notes.NoteAnnotationService"
                            serviceImplementation="notes.impl.NoteAnnotationServiceImpl"/>
        <projectService serviceInterface="notes.NotePopupService"
                            serviceImplementation="notes.impl.NotePopupServiceImpl"/>
        <projectService serviceInterface="notes.NoteListService"
                            serviceImplementation="notes.impl.NoteListServiceImpl"/>
    </extensions>

    <actions>
        <action id="notes-plugin.notes.ShowNoteAnnotations" class="notes.ShowNoteAnnotations" text="Show notes.Note Annotations"
                description="show note annotations">
            <add-to-group group-id="EditorGutterPopupMenu" anchor="first"/>
        </action>
        <action id="notes-plugin.notes.showNotesList" class="notes.ShowNotesList" text="show notes list"
                description="show the notes list">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>